@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider Theme="MyCustomTheme" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />


<div class="page">

    <MudLayout>
        <MudAppBar Elevation="1">
            <MudIconButton Icon="@Icons.Material.Filled.Menu"
                           Color="Color.Info" Edge="Edge.Start" OnClick="ToggleDrawer" />
            <MudImage Src="images/caspi_eyes.jpg" Width="85" Height="85" Alt="Me" Elevation="0" Class="pa-0 mt-6" />
            <MudSpacer />
            <MudText Typo="Typo.h5" Class="ml-3" Align="Align.Center">.Net net nett</MudText>
            <MudSpacer />
            <MudText Typo="Typo.h6" Class="ml-3" Align="Align.Right"></MudText>
            <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
        </MudAppBar>

        <MudDrawer @bind-Open="@openLeft" ClipMode="DrawerClipMode.Always" Elevation="2">
            <NavMenu />
        </MudDrawer>

        <MudMainContent>
            <MudContainer Class="pa-4" MaxWidth="MaxWidth.Large">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>

</div>

@code {

    [Inject] ISnackbar Snackbar { get; set; } = default!;

    bool openLeft = false;

    void ToggleDrawer()
    {
        openLeft = !openLeft;
    }

    MudTheme MyCustomTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            // Primary = Colors.Red.Darken4,
            // Secondary = Colors.Red.Lighten5,
            // Tertiary = Colors.Red.Lighten4,
            // AppbarBackground = Colors.Red.Darken4
            Primary = Colors.Cyan.Darken4,
            Secondary = Colors.Cyan.Lighten5,
            Tertiary = Colors.Cyan.Lighten4,
            AppbarBackground = Colors.Cyan.Darken4
        },

        PaletteDark = new PaletteDark()
        {
            Primary = Colors.Blue.Lighten1,
        },

        LayoutProperties = new LayoutProperties()
        {
            DrawerWidthLeft = "260px",
            DrawerWidthRight = "300px",

        },

        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "Roboto", "Helvetica", "Arial", "sans-serif" }
            },
        }
    };
}